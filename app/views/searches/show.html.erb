<h1>Search Results</h1>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-4">
      <table width="300" border="1" style="float:left;">
        <caption>Search Result</caption>
        <thead>
          <th>
            Item Name
          </th>
          <th>
            Fixed Price
          </th>
        </thead>
        <tbody>
          <%= @search.products.each do |p| %>
            <tr>
              <td><%= link_to p.item_name, bid_item_path(p) %></td>
              <td><%= p.fixed_price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

